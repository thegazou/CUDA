
package ch.arc.cours.lamda.c_referencemethode.tools;

public class IntegerTools
	{



	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	public static boolean isPaire(int x)
		{
		return x % 2 == 0;
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	}
