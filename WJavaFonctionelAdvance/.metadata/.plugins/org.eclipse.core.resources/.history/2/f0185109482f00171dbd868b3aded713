			catch (Exception e)
				{
				System.out.println("impossible");
				}
			}

		// lamda , reference methode
			{

			try
				{
				String[] tab = { "1", "2", "3", "4" };

				// TODO
				List<Number> list = null;

				System.out.println(list);
				}
			catch (Exception e)
				{
				System.out.println("impossible");
				}
			}
		}

