#include <iostream>
#include "Grid.h"
#include "Device.h"
#include "MathTools.h"
#include "limits.h"

using std::cout;
using std::endl;

/*----------------------------------------------------------------------*\
 |*			Declaration 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Imported	 	*|
 \*-------------------------------------*/

#include "./Basic/host/Montecarlo.h"

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

bool useMontecarlo(void);

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

/*----------------------------------------------------------------------*\
 |*			Implementation 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

bool useMontecarlo()
    {
    //uint nbFlecheByThread = INT_MAX - 1;
    //nbFlecheByThread *= 2;
    int nbFlecheTotal = INT_MAX;
    float result;

    // Grid cuda

    dim3 dg = dim3(2, 1, 1); //
    dim3 db = dim3(64, 1, 1);  //faire varier puissance de 2
    Grid grid(dg, db);

    Montecarlo montecarlo(grid, nbFlecheTotal);
    montecarlo.run();
    result = montecarlo.getResult();
    printf("Result = %f\n", result);

    bool isOk = MathTools::isEquals(result, PI_FLOAT, 0.01f);

    return isOk;
    }

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

/*----------------------------------------------------------------------*\
 |*			End	 					*|
 \*---------------------------------------------------------------------*/

