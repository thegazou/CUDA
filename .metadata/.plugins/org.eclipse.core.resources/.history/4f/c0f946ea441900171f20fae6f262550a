#include "Montecarlo.h"

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

bool useMontecarlo(void);

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

/*----------------------------------------------------------------------*\
 |*			Implementation 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

bool useMontecarlo()
    {
    uint nbFlecheByThread = INT_MAX - 1;
    nbFlecheByThread *= 2;
    float result;

    // Grid cuda

    dim3 dg = dim3(24, 1, 1);
    dim3 db = dim3(1024, 1, 1);  //faire varier
    Grid grid(dg, db);

    Montecarlo montecarlo(grid, nbFlecheByThread);
    slice.run();
    result = slice.getResult();
    printf("Result = %f\n", result);

    bool isOk = MathTools::isEquals(result, PI_FLOAT, 0.01f);

    return isOk;
    }

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

/*----------------------------------------------------------------------*\
 |*			End	 					*|
 \*---------------------------------------------------------------------*/

